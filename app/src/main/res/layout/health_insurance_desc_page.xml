<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:baselineAligned="false"

    android:orientation="vertical"
    android:padding="15dp">

    <ImageView
        android:layout_width="100dp"
        android:layout_height="60dp"
        android:src="@drawable/logopg"
        android:layout_gravity="center"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/purple_700"
        android:layout_marginBottom="10dp"
    android:id="@+id/healthcompanytextview"
        android:textSize="25dp"
        android:textStyle="bold" />

    <TextView
        android:layout_width="371dp"
        android:layout_height="wrap_content"
        android:layout_marginVertical="10dp"
android:id="@+id/healthcompanydesc"
        android:textSize="18dp"
        android:textColor="#16242B"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
       android:id="@+id/healthpricetextview"
    android:textColor="@color/black"
        android:textStyle="bold"
        android:textSize="22dp"

        android:layout_marginBottom="5dp"
        />
    <View
        android:id="@+id/innerLine"
        android:layout_width="match_parent"
        android:layout_height="5dp"
        android:background="#BCB7B7"
        android:layout_marginBottom="5dp"/>


    <LinearLayout
        android:layout_width="371dp"
        android:layout_height="75dp"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="92dp"
            android:layout_height="71dp"
            android:src="@drawable/ic_tick"
            android:visibility="visible" />


        <TextView
            android:layout_width="191dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:paddingTop="16dp"

            android:text="Hospital Charges"
            android:textColor="#5E5454"
            android:textSize="22dp"
            android:textStyle="bold"

            />


    </LinearLayout>
    <LinearLayout
        android:layout_width="371dp"
        android:layout_height="75dp"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="92dp"
            android:layout_height="71dp"
            android:src="@drawable/ic_tick"
            android:visibility="visible" />


        <TextView
            android:layout_width="191dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:paddingTop="16dp"

            android:text="Cancer Treatment"
            android:textColor="#5E5454"
            android:textSize="22dp"
            android:textStyle="bold"

            />


    </LinearLayout>
    <LinearLayout
        android:layout_width="371dp"
        android:layout_height="75dp"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="92dp"
            android:layout_height="71dp"
            android:src="@drawable/ic_tick"
            android:visibility="visible" />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:paddingTop="16dp"

            android:text="Covid-19 Treatment"
            android:textColor="#5E5454"
            android:textSize="22dp"
            android:textStyle="bold"

            />


    </LinearLayout>
    <LinearLayout
        android:layout_width="371dp"
        android:layout_height="75dp"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="92dp"
            android:layout_height="71dp"
            android:src="@drawable/ic_tick"
            android:visibility="visible" />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:paddingTop="16dp"

            android:text="Pre-Existing Conditions"
            android:textColor="#5E5454"
            android:textSize="22dp"
            android:textStyle="bold"

            />


    </LinearLayout>
    <LinearLayout
        android:layout_width="371dp"
        android:layout_height="75dp"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="92dp"
            android:layout_height="71dp"
            android:src="@drawable/ic_tick"
            android:visibility="visible" />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:paddingTop="16dp"

            android:text="Emegrency Dental"
            android:textColor="#5E5454"
            android:textSize="22dp"
            android:textStyle="bold"

            />



    </LinearLayout>


    <View

        android:layout_width="match_parent"
        android:layout_height="5dp"
        android:background="#BCB7B7"
        android:layout_marginBottom="10dp"/>
    <LinearLayout
        android:layout_width="371dp"
        android:layout_height="75dp"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="80dp"
            android:layout_height="60dp"
            android:src="@drawable/ic_star"
            android:visibility="visible" />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="3dp"
            android:paddingTop="16dp"

            android:text="Complimentary addon OPD"
            android:textColor="#5E5454"
            android:textSize="22dp"
            android:textStyle="bold"

            />



    </LinearLayout>

    <Button
        android:id="@+id/addInsuranceButton"
        android:layout_width="match_parent"
        android:layout_height="60dp"

        android:layout_marginLeft="5dp"
        android:layout_marginRight="8dp"
        android:backgroundTint="@color/button_background"
        android:onClick="gotoLastPageHealth"
        android:padding="10dp"
        android:text="CONTINUE"
        android:textSize="20dp"
        android:textStyle="bold" />
</LinearLayout>
</ScrollView>
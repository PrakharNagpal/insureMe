<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Let's simplify your Car Insurance"
        android:textStyle="bold"
        android:textSize="25dp"
        android:layout_gravity="center"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/policymsg"
        android:textSize="20dp"
        android:layout_marginTop="10dp"
        android:layout_gravity="center"/>



    <TextView
        android:id="@+id/registration"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Year Of Purchase"
        android:textSize="25sp"
        android:layout_marginTop="75dp"
        android:textStyle="bold"/>

    <Spinner
        android:id="@+id/spinner1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:drawable/btn_dropdown"
        android:spinnerMode="dropdown"
        android:contentDescription="Year Of Purchase"
        />



    <TextView
        android:id="@+id/enginenumber"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Company"
        android:textSize="25sp"
        android:layout_marginTop="50dp"
        android:textStyle="bold"/>

    <Spinner
        android:id="@+id/spinner2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:drawable/btn_dropdown"
        android:spinnerMode="dropdown"
        android:contentDescription="Company" />


    <TextView
        android:id="@+id/Chasisnumber"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Model of the car"
        android:textSize="25sp"
        android:layout_marginTop="75dp"
        android:textStyle="bold"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Model of the Car"
        android:backgroundTint="#ECECEC"
        android:background="@drawable/edittext"
        android:inputType="date"
        android:minHeight="48dp" />


    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="80dp"
        android:background="@color/button_background"
        android:text="CONTINUE"
        android:textColor="#795548"
        android:textSize="20sp" />


</LinearLayout>